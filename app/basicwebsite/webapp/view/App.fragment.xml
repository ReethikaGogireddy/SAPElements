<ActionSheet id="actionSheet"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	core:require="{ MessageToast: 'sap/m/MessageToast' }"
	title="Choose Your Action"
	showCancelButton="true"
	placement="Bottom">
	<Button id="accept"
		text="Accept"
		icon="sap-icon://accept"
		press="MessageToast.show('Selected action is Accept')"/>
	<Button id="reject"
		text="Reject"
		icon="sap-icon://decline"
		press="MessageToast.show('Selected action is Reject)"/>
	<Button id="email"
		text="Email"
		icon="sap-icon://email"
		press="MessageToast.show('Selected action is Email')"/>
	<Button id="forward"
		text="Forward"
		icon="sap-icon://forward"
		press="MessageToast.show('Selected action is Forward')"/>
	<Button id="delete"
		text="Delete"
		icon="sap-icon://delete"
		press="MessageToast.show('Selected action is Delete')"/>
	<Button id="others"
		text="Other"
		press="MessageToast.show('Selected action is Other')"/>
</ActionSheet>