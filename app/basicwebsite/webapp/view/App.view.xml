<mvc:View controllerName="basicwebsite.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.f"
	xmlns:cards="sap.f.cards"
	xmlns:l="sap.ui.layout"
	xmlns:lf="sap.ui.layout.form"
	
	height="100%">
	<Page id="page" title="Travel Destinations ">
		<ScrollContainer  id="menu" vertical="true" height="100%">
			<tnt:ToolHeader id="shellLikeToolHeaderOnlyMandatoryControls" class="sapUiTinyMargin sapUiLargeMarginTop">
			<!-- <Image src="..\test-resources\images\sap.png" decorative="false" press="onLogoPressed" tooltip="SAP Logo">
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
			</Image> -->
			<Title text="Product Name" wrapping="false">
				<layoutData>
					<OverflowToolbarLayoutData priority="Disappear"/>
				</layoutData>
			</Title>
			<ToolbarSpacer />
			<Avatar src="sample.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
			</Avatar>
		</tnt:ToolHeader>
		</ScrollContainer>
		<Title id="carouselTitle"
		class="sapUiMediumMarginTop"
		text="Carousel with Display Options"></Title>
      <HBox justifyContent="Center" renderType="Bare">
	 <Panel id="carouselContainer" height="500px" backgroundDesign="Transparent">
		 <Carousel
			 id="carouselSample"
			 ariaLabelledBy="carouselTitle"
			 loop="true">
			 <customLayout>
				 <CarouselLayout/>
			 </customLayout>
		 </Carousel>
	 </Panel>
 </HBox>

 
    </Page>
    
</mvc:View>
